---
import { Picture, getImage } from "astro:assets";
import heroImage from "@/assets/image.png";
import Link from "@/components/ui/link.astro";
import { Icon } from "astro-icon/components";

const bgImage = await getImage({ src: heroImage, format: "avif" });
---

<main
  class="flex items-center min-h-[600px] bg-cover bg-center relative pb-24 md:pb-32"
  style={`background-image: url(${bgImage.src});`}>
  <div
    class="absolute inset-0 bg-gradient-to-r from-brand-primary/90 via-brand-primary/50 to-transparent">
  </div>
  <div class="relative z-10 w-full">
    <div class="p-8 md:p-20 max-w-3xl text-left">
      <h1
        class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter text-brand-secondary font-serif">
        Arrive with <br /> Confidence.
      </h1>
      <p
        class="text-2xl mt-4 text-brand-secondary/90 max-w-xl font-serif italic">
        From door to destination, effortlessly.
      </p>
      <div class="mt-8 flex flex-col sm:flex-row gap-3 justify-start">
        <Link href="#" style="accent" class="flex gap-1 items-center justify-center">
          Explore Your Next Arrival
        </Link>
      </div>
    </div>
  </div>
</main>
